<div class="author">
    <h1 class="author__heading">Hi I'm Andy</h1>
    <p class="author__body">Aspiring Web Developer</p>
</div>

<img src="/img/salt_flats_flamingos.jpeg" alt="Image of Salt Flats in Bolivia" class="bolivia-image">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">

        <% data.forEach(post => { %>
            
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>

        <% }) %>

    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

</section>